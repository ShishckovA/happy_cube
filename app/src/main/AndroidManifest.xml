<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.happycube">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/checkbox_off_background"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/checkbox_off_background"
        android:supportsRtl="true"
        android:theme="@style/Theme.HappyCube"
        tools:targetApi="31">
        <activity
            android:name=".LevelCompleteActivity"
            android:exported="false" />
        <activity
            android:name=".LevelSelection"
            android:exported="false" />
        <activity
            android:name=".MenuActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LevelActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
    </application>

</manifest>